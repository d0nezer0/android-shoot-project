<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".mvp.view.activity.DetailsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/main_background"
        tools:context=".mvp.view.activity.MainActivity">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tab_height_72"
            android:background="@drawable/tab_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextClock
                android:id="@+id/detail_time"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:text="2023-05-15 15:39:43"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_24sp"
                android:textStyle="bold"
                android:format12Hour="yyyy-MM-dd HH:mm:ss"
                android:format24Hour="yyyy-MM-dd HH:mm:ss" />

            <ImageView

                android:id="@+id/main_wifi"
                android:layout_width="@dimen/img_size_24dp"
                android:layout_height="@dimen/img_size_24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_size_24dp"
                android:src="@drawable/main_wifi"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/main_battery"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="24dp"
                android:src="@drawable/main_battery"
                android:visibility="invisible" />

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_mid_size_16dp"
                android:layout_marginBottom="@dimen/margin_mid_size_16dp"
                android:background="@drawable/button_round_4"
                android:drawableStart="@drawable/main_history"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="历史记录"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_24sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/backHomeTv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_size_24dp"
                android:layout_marginTop="@dimen/margin_mid_size_16dp"
                android:layout_marginEnd="@dimen/margin_size_24dp"
                android:layout_marginBottom="@dimen/margin_mid_size_16dp"
                android:background="@drawable/button_round_4"
                android:drawableStart="@drawable/home"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="首        页"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_24sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/main_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/tab_height_72"
            android:gravity="center_vertical"
            android:text="射 击 数 据"
            android:textColor="@android:color/white"
            android:textSize="@dimen/res_text_size_28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/leftTitle"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/img_size_24dp"
            android:layout_marginTop="@dimen/img_size_24dp"
            android:layout_marginBottom="@dimen/img_size_24dp"
            android:background="@drawable/button_round_second_0"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button_round_4"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="张    三"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_28sp" />

            <TextView
                android:id="@+id/tvCurBout"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="@dimen/size_42dp"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="14"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_28sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="@dimen/margin_size_12dp"
                android:layout_marginEnd="@dimen/margin_size_12dp"
                android:background="@color/main_style_blue" />

            <TextView
                android:id="@+id/boutTime"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="24dp"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="2023-5-16 11:23:22"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_28sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="@dimen/margin_size_12dp"
                android:layout_marginTop="@dimen/img_size_24dp"
                android:layout_marginEnd="@dimen/margin_size_12dp"
                android:background="@color/main_style_blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="24dp"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="胸环靶"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_28sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="@dimen/margin_size_12dp"
                android:layout_marginEnd="@dimen/margin_size_12dp"
                android:background="@color/main_style_blue" />

            <TextView
                android:id="@+id/totalRing"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="24dp"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="40.2"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_28sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="@dimen/margin_size_12dp"
                android:layout_marginEnd="@dimen/margin_size_12dp"
                android:background="@color/main_style_blue" />

            <ImageView
                android:id="@+id/qr_code"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/btnLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/leftTitle">

            <TextView
                android:id="@+id/tvBtn00"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginEnd="338dp"
                android:background="@drawable/left_check_bg"
                android:drawablePadding="12dp"
                android:gravity="center"
                android:text="打 印"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <TextView
                android:id="@+id/tvBtn01"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginEnd="229dp"
                android:background="@drawable/left_check_bg"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="轨迹"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <TextView
                android:id="@+id/tvBtn02"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginEnd="120dp"
                android:background="@drawable/left_uncheck_bg"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:text="Txy"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

            <TextView
                android:id="@+id/tvBtn03"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:background="@drawable/right_uncheck_bg"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingStart="@dimen/margin_size_12dp"
                android:text="RT"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp"
                tools:ignore="RtlSymmetry" />
        </FrameLayout>
        <com.example.common_module.view.NoScrollerViewPager
            android:id="@+id/viewPager"
            android:background="@drawable/bg_shoot_data_fg"
            android:layout_marginStart="@dimen/img_size_24dp"
            android:layout_marginTop="@dimen/img_size_24dp"
            android:layout_marginEnd="@dimen/img_size_24dp"
            app:layout_constraintStart_toEndOf="@id/leftTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnLayout"
            app:layout_constraintBottom_toBottomOf="@id/leftTitle"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>