<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@color/main_style_blue">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="6dp"
            android:gravity="start|center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="报靶型号："
            android:textColor="@android:color/white"
            android:textSize="@dimen/res_text_size_20sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_round_stroke_0"
            android:orientation="horizontal"
            android:padding="4dp">

            <TextView
                android:id="@+id/shootType1"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_round_0"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="实时轨迹"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_20sp" />

            <TextView
                android:id="@+id/shootType2"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="回放轨迹"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_20sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>