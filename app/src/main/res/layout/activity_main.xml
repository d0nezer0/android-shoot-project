<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:fitsSystemWindows="true"
    tools:context=".mvp.view.activity.MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_height_72"
        android:background="@drawable/tab_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextClock
            android:id="@+id/main_time"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="2023-05-15 15:39:43"
            android:textColor="@android:color/white"
            android:textSize="@dimen/res_text_size_24sp"
            android:textStyle="bold"
            android:format12Hour="yyyy-MM-dd HH:mm:ss"
            android:format24Hour="yyyy-MM-dd HH:mm:ss" />


        <ImageView
            android:visibility="gone"
            android:id="@+id/main_battery"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:src="@drawable/dianliang4" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/main_wifi"
            android:layout_width="@dimen/img_size_24dp"
            android:layout_height="@dimen/img_size_24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_size_24dp"
            android:src="@drawable/main_wifi" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/jumpConfigTv"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_mid_size_16dp"
            android:layout_marginBottom="@dimen/margin_mid_size_16dp"
            android:background="@drawable/button_round_4"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="22dp"
            android:text="退 出"
            android:textColor="@android:color/white"
            android:textSize="@dimen/res_text_size_24sp" />

        <TextView
            android:id="@+id/jumpHistoryTv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_mid_size_16dp"
            android:layout_marginBottom="@dimen/margin_mid_size_16dp"
            android:background="@drawable/button_round_4"
            android:drawableStart="@drawable/main_history"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="历史记录"
            android:textColor="@android:color/white"
            android:textSize="@dimen/res_text_size_24sp" />

        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_size_24dp"
            android:layout_marginTop="@dimen/margin_mid_size_16dp"
            android:layout_marginEnd="@dimen/margin_size_24dp"
            android:layout_marginBottom="@dimen/margin_mid_size_16dp"
            android:background="@drawable/button_round_4"
            android:drawableStart="@drawable/main_setting_icon"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="设        置"
            android:textColor="@android:color/white"
            android:textSize="@dimen/res_text_size_24sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/tab_height_72"
        android:gravity="center_vertical"
        android:text="模 拟 训 练 系 统"
        android:textColor="@android:color/white"
        android:textSize="@dimen/res_text_size_28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_24dp"
        android:layout_marginTop="@dimen/margin_size_12dp"
        android:background="@color/second_background"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_size_12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_title">

        <TextView
            android:id="@+id/topTitleBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="@dimen/margin_little_size_12dp"
            android:layout_marginTop="@dimen/margin_little_size_12dp"
            android:layout_marginEnd="@dimen/margin_little_size_12dp"
            android:layout_marginBottom="@dimen/margin_little_size_12dp"
            android:background="@drawable/button_round_4"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="TOP 榜单"
            android:textColor="@android:color/white"
            android:textSize="@dimen/res_text_size_22sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="6dp"
                android:gravity="start|center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="年度榜单"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />
            <TextView
                android:id="@+id/top_year"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="6dp"
                android:gravity="start|center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="李四"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_little_size_12dp"
            android:layout_marginEnd="@dimen/margin_little_size_12dp"
            android:background="@color/main_style_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="6dp"
                android:gravity="start|center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="月榜"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />
            <TextView
                android:id="@+id/top_month"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="6dp"
                android:gravity="start|center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="王东旭"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_little_size_12dp"
            android:layout_marginEnd="@dimen/margin_little_size_12dp"
            android:background="@color/main_style_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="6dp"
                android:gravity="start|center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="周榜"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />
            <TextView
                android:id="@+id/top_week"

                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="6dp"
                android:gravity="start|center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="王芳"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_little_size_12dp"
            android:layout_marginEnd="@dimen/margin_little_size_12dp"
            android:background="@color/main_style_blue" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="6dp"
                android:gravity="start|center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="日榜"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />
            <TextView
                android:id="@+id/top_day"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:layout_marginBottom="8dp"
                android:drawablePadding="6dp"
                android:gravity="start|center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="张三"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/person_info"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_size_24dp"
        android:layout_marginTop="@dimen/margin_size_24dp"
        android:background="@color/second_background"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_size_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="@dimen/margin_mid_size_16dp"
            android:background="@drawable/button_round_stroke_0"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="用 户 信 息"
            android:textColor="@android:color/white"
            android:textSize="@dimen/res_text_size_22sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:drawablePadding="6dp"
                android:gravity="start|center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="名字"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />

            <TextView
                android:id="@+id/userName"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:focusableInTouchMode="true"
                android:focusable="true"

                android:text="张三风"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:background="@drawable/button_round_4"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_little_size_12dp"
            android:layout_marginEnd="@dimen/margin_little_size_12dp"
            android:background="@color/main_style_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:drawablePadding="6dp"
                android:gravity="start|center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="局ID"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />

            <TextView
                android:id="@+id/userCurBout"
                android:text="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_little_size_12dp"
            android:layout_marginEnd="@dimen/margin_little_size_12dp"
            android:background="@color/main_style_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:drawablePadding="6dp"
                android:gravity="start|center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="当前发序"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />

            <TextView
                android:id="@+id/tvCurFaxu"
                android:text="6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_little_size_12dp"
            android:layout_marginEnd="@dimen/margin_little_size_12dp"
            android:background="@color/main_style_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:drawablePadding="6dp"
                android:gravity="start|center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="当前环数"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />

            <TextView
                android:id="@+id/tvCurRing"
                android:text="9.8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="@dimen/margin_little_size_12dp"
            android:layout_marginEnd="@dimen/margin_little_size_12dp"
            android:background="@color/main_style_blue" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:drawablePadding="6dp"
                android:gravity="start|center_vertical"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="总环数"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />

            <TextView
                android:id="@+id/tvTotalRing"
                android:text="40.2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_little_size_12dp"
                android:layout_marginEnd="@dimen/margin_little_size_12dp"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_22sp" />
        </LinearLayout>


    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shootLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_size_24dp"
        android:background="@color/second_background"
        android:padding="@dimen/margin_little_size_12dp"
        app:layout_constraintBottom_toBottomOf="@id/person_info"
        app:layout_constraintStart_toEndOf="@id/topLayout"
        app:layout_constraintTop_toTopOf="@id/topLayout">

        <!--android:drawableEnd="@drawable/arrow_down"-->
        <TextView
            android:id="@+id/shootNum"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:background="@drawable/button_round_0"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:paddingStart="70dp"
            android:paddingEnd="70dp"
            android:text="胸 环 靶"
            android:textColor="@android:color/white"
            android:textSize="@dimen/res_text_size_22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <FrameLayout
            android:id="@+id/shootPerson"
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginTop="@dimen/margin_little_size_12dp"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shootNum">


            <View
                android:foreground="@drawable/shoot_person_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                tools:targetApi="m" />

            <org.ggxz.shoot.widget.TargetPointView
                android:id="@+id/targetView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleX="2"
                android:scaleY="2"
                android:translationY="40dp" />
            <TextView
                android:id="@+id/tvShootNum"
                android:layout_marginTop="@dimen/margin_size_12dp"
                android:layout_marginStart="@dimen/margin_size_24dp"
                android:textColor="@color/main_style_blue"
                android:textStyle="bold"
                android:text="1"
                android:textSize="60sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/gradeLayout"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_size_24dp"
            android:paddingEnd="@dimen/margin_size_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/shootPerson">


            <TextView

                android:id="@+id/grade"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="成绩"
                android:textColor="@android:color/darker_gray"
                android:textSize="@dimen/res_text_size_18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/grade_count"
                android:layout_width="@dimen/size_42dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/margin_mid_size_16dp"
                android:layout_marginEnd="@dimen/margin_mid_size_16dp"
                android:layout_marginBottom="4dp"
                android:gravity="center_vertical|right"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/res_text_size_24sp"
                android:textStyle="bold" />

            <ProgressBar
                android:id="@+id/grade_progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/margin_mid_size_16dp"
                android:layout_weight="1"
                android:background="@drawable/progress_bg_10"
                android:indeterminate="false"
                android:paddingStart="1dp"
                android:paddingTop="1dp"
                android:paddingBottom="1dp"
                android:progress="0"
                android:progressDrawable="@drawable/round_progress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/shootPerson"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/gunLayout"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/margin_size_24dp"
            android:paddingEnd="@dimen/margin_size_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
